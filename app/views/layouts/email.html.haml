!!! html
%html
  %head
    %style{:type => 'text/css'}
      :sass
        html, body, div, form, fieldset, legend, label
          margin: 0
          padding: 0

        table
          border-collapse: collapse
          border-spacing: 0

          th, td
            text-align: left
            vertical-align: top

        h1, h2, h3, h4, h5, h6, th, td, caption 
          font-weight: normal

        img 
          border: 0

        body
          background: #15D

        footer, header, section
          display: block

        a 
          color: #222 
          font-weight: bold

        h1, h2, h3, h4
          font-weight: bold
          color: #15D

        h1 
          font-size: 22px
          margin: 10px 0

        p
          margin: 10px 0

        #wrapper
          margin: 0px auto 30px
          width: 600px
          background: white
          padding: 20px 40px 40px
          box-shadow: 4px 5px 4px #665
          border-radius: 0 0px 4px
          border-top: solid 1px #888
       
        footer 
          font-size: 11px

        table
          display: table 
          border: solid 1px #ccc
          border-right-color: #aaa
          border-bottom-color: #aaa
          width: 100%

          .number 
            text-align: right
            min-width: 45px

          th
            background: #1155dd
            color: white
            padding: 7px 10px
            text-shadow: #222 1px 1px 0px

          tr.alt td
            background: #eee

          td
            border-bottom: 1px solid #DDD
            padding: 6px 10px
            border-style: inset

            &.name 
              min-width: 180px

            &.title, &.subtotal
              font-weight: bold

        table.split
          td
            width: 50%

        #order_total
          font-weight: bold

        #subtotal-row td, #order-total td
          border-top: solid 1px #aaa

        #addresses
          width: 600px

          .address
            float: left
            width: 292px
            margin: 10px 0
            border: solid 1px #ccc
            border-right-color: #aaa
            border-bottom-color: #aaa

            &#billing
              margin-right: 10px

            h2
              font-size: 16px
              font-weight: normal
              display: block
              margin: 0
              background: yellow
              padding: 8px
              background: #1155dd
              color: white
              text-shadow: #222 1px 1px 0px

            .details
              padding: 10px

            .full-name
              font-weight: bold

  %body
    #wrapper
      %header
        = render :partial => 'shared/email/header'

      %section#main
        = yield

      %footer
        = render :partial => 'shared/email/footer'
