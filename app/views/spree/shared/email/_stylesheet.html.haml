:sass
  $background-color: #15D 
  $border-color: #AAA
  $text-color: #222
  $box-shadow-color: #665
  $table-border: 1px solid #ccc
  $table-row-alt-color: #eee
  $table-row-divider: 1px solid #DDD

  body
    font-family: sans-serif
    background: $background-color 
    color: $text-color

  a 
    color: $text-color
    font-weight: bold

  h1, h2, h3, h4
    font-weight: bold
    color: $background-color

  h1 
    font-size: 22px
    margin: 10px 0

  p
    margin: 10px 0

  header
    #logo

  #wrapper
    margin: 0px auto 30px
    width: 600px
    background: white
    padding: 20px 40px 40px
    box-shadow: 4px 5px 4px $box-shadow-color

  footer 
    font-size: 11px

  table
    display: table 
    border: $table-border
    border-right-color: $border-color
    border-bottom-color: $border-color
    width: 100%
    border-collapse: collapse
    margin-bottom: 5px

    .number 
      text-align: right
      min-width: 45px

    th
      background: $background-color
      color: white
      padding: 7px 10px
      text-shadow: $text-color 1px 1px 0px
      font-weight: bold

    tr.alt td
      background: $table-row-alt-color 

    td
      border-bottom: $table-row-divider
      padding: 6px 10px

      &.name 
        min-width: 180px

      &.title, &.subtotal
        font-weight: bold

  table.split
    td
      width: 50%

  #order_total
    font-weight: bold

  #subtotal-row td, #order-total td
    border-top: solid 1px $border-color

  #addresses
    width: 600px

    .address
      width: 292px

      &#billing
        float: left

      &#shipping
        float: right

      

  .address
    margin: 10px 0
    border: $table-border
    border-right-color: $border-color
    border-bottom-color: $border-color

    h2
      font-size: 16px
      display: block
      margin: 0
      padding: 8px
      background: $background-color
      color: white
      text-shadow: $text-color 1px 1px 0px

    .details
      padding: 10px

    .full-name
      font-weight: bold
