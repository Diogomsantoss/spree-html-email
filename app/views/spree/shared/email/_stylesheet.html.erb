body {
  font-family: sans-serif;
  background: #1155dd;
  color: #222222; }

a {
  color: #222222;
  font-weight: bold; }

h1, h2, h3, h4 {
  font-weight: bold;
  color: #1155dd; }

h1 {
  font-size: 22px;
  margin: 10px 0; }

p {
  margin: 10px 0; }

#wrapper {
  margin: 0px auto 30px;
  width: 600px;
  background: white;
  padding: 20px 40px 40px;
  box-shadow: 4px 5px 4px #666655; }

footer {
  font-size: 11px; }

table {
  display: table;
  border: 1px solid #cccccc;
  border-right-color: #aaaaaa;
  border-bottom-color: #aaaaaa;
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 5px; }
  table .number {
    text-align: right;
    min-width: 45px; }
  table th {
    background: #1155dd;
    color: white;
    padding: 7px 10px;
    text-shadow: #222222 1px 1px 0px;
    font-weight: bold; }
  table tr.alt td {
    background: #eeeeee; }
  table td {
    border-bottom: 1px solid #dddddd;
    padding: 6px 10px; }
    table td.name {
      min-width: 180px; }
    table td.title, table td.subtotal {
      font-weight: bold; }

table.split td {
  width: 50%; }

#order_total {
  font-weight: bold; }

#subtotal-row td, #order-total td {
  border-top: solid 1px #aaaaaa; }

#addresses {
  width: 600px; }
  #addresses .address {
    width: 292px; }
    #addresses .address#billing {
      float: left; }
    #addresses .address#shipping {
      float: right; }

.address {
  margin: 10px 0;
  border: 1px solid #cccccc;
  border-right-color: #aaaaaa;
  border-bottom-color: #aaaaaa; }
  .address h2 {
    font-size: 16px;
    display: block;
    margin: 0;
    padding: 8px;
    background: #1155dd;
    color: white;
    text-shadow: #222222 1px 1px 0px; }
  .address .details {
    padding: 10px; }
  .address .full-name {
    font-weight: bold; }
    